PKGS += THIRD_PARTY_MINIAUDIO

THIRD_PARTY_MINIAUDIO_ARTIFACTS += THIRD_PARTY_MINIAUDIO_A
THIRD_PARTY_MINIAUDIO = $(THIRD_PARTY_MINIAUDIO_A_DEPS) $(THIRD_PARTY_MINIAUDIO_A)
THIRD_PARTY_MINIAUDIO_A = o/$(MODE)/third_party/miniaudio/miniaudio.a
THIRD_PARTY_MINIAUDIO_A_FILES := $(wildcard third_party/miniaudio/*)
THIRD_PARTY_MINIAUDIO_A_HDRS = $(filter %.h,$(THIRD_PARTY_MINIAUDIO_A_FILES))
THIRD_PARTY_MINIAUDIO_A_SRCS = $(filter %.c,$(THIRD_PARTY_MINIAUDIO_A_FILES))
THIRD_PARTY_MINIAUDIO_A_OBJS = $(THIRD_PARTY_MINIAUDIO_A_SRCS:%.c=o/$(MODE)/%.o)

THIRD_PARTY_MINIAUDIO_A_DIRECTDEPS =				\
	LIBC_CALLS						\
	LIBC_INTRIN						\
	LIBC_MEM						\
	LIBC_NEXGEN32E						\
	LIBC_RUNTIME						\
	LIBC_STDIO						\
	LIBC_STR						\
	LIBC_SYSV						\
	LIBC_THREAD						\
	LIBC_TINYMATH						\
	THIRD_PARTY_MUSL					\
	THIRD_PARTY_STB						\

THIRD_PARTY_MINIAUDIO_A_DEPS :=					\
	$(call uniq,$(foreach x,$(THIRD_PARTY_MINIAUDIO_A_DIRECTDEPS),$($(x))))

THIRD_PARTY_MINIAUDIO_A_CHECKS =				\
	$(THIRD_PARTY_MINIAUDIO_A).pkg				\
	$(THIRD_PARTY_MINIAUDIO_A_HDRS:%=o/$(MODE)/%.ok)

$(THIRD_PARTY_MINIAUDIO_A):					\
		third_party/miniaudio/				\
		$(THIRD_PARTY_MINIAUDIO_A).pkg			\
		$(THIRD_PARTY_MINIAUDIO_A_OBJS)

$(THIRD_PARTY_MINIAUDIO_A).pkg:					\
		$(THIRD_PARTY_MINIAUDIO_A_OBJS)			\
		$(foreach x,$(THIRD_PARTY_MINIAUDIO_A_DIRECTDEPS),$($(x)_A).pkg)

$(THIRD_PARTY_MINIAUDIO_A_OBJS): private			\
		CFLAGS +=					\
			-ffunction-sections			\
			-fdata-sections

THIRD_PARTY_MINIAUDIO_LIBS = $(foreach x,$(THIRD_PARTY_MINIAUDIO_ARTIFACTS),$($(x)))
THIRD_PARTY_MINIAUDIO_SRCS = $(foreach x,$(THIRD_PARTY_MINIAUDIO_ARTIFACTS),$($(x)_SRCS))
THIRD_PARTY_MINIAUDIO_HDRS = $(foreach x,$(THIRD_PARTY_MINIAUDIO_ARTIFACTS),$($(x)_HDRS))
THIRD_PARTY_MINIAUDIO_CHECKS = $(foreach x,$(THIRD_PARTY_MINIAUDIO_ARTIFACTS),$($(x)_CHECKS))
THIRD_PARTY_MINIAUDIO_OBJS = $(foreach x,$(THIRD_PARTY_MINIAUDIO_ARTIFACTS),$($(x)_OBJS))

.PHONY: o/$(MODE)/third_party/miniaudio
o/$(MODE)/third_party/miniaudio: $(THIRD_PARTY_MINIAUDIO_CHECKS)
